---
import { personal } from '../data/portfolio';

const meta = [
  { label: 'Status',   val: `üü¢ ${personal.status}` },
  { label: 'Location', val: `üìç ${personal.location}` },
  { label: 'Degree',   val: personal.degree },
  { label: 'GPA',      val: `${personal.gpa}` },
];
---

<section id="about" class="py-24">
  <div class="max-w-5xl mx-auto px-8">
    <div class="grid md:grid-cols-2 gap-16 items-center">

      <!-- Avatar -->
      <div class="reveal relative">
        <div class="rounded-2xl overflow-hidden aspect-square flex items-center justify-center"
             style="background:var(--bg-3); border:1px solid var(--border)">
          <!-- Replace this div with an <img> tag when you have your photo -->
          <!-- SESUDAH (foto asli) -->
          <img
            src="/photo.jpeg"
            alt="Veri Marpaung"
            class="w-full h-full object-cover object-top"
          />
        </div>
      </div>

      <!-- Text -->
      <div class="reveal" style="transition-delay:0.15s">
        <div class="section-label">About Me</div>
        <h2 class="font-display font-bold mb-4 leading-tight"
            style="font-size:clamp(2rem,4vw,3rem); color:var(--text)">
          Passionate builder &amp; problem solver
        </h2>
        <p class="mb-8 leading-relaxed" style="color:var(--text-muted); max-width:480px">
          Hi! I'm {personal.name}, a Software Engineering student with a strong focus on
          full-stack development. I love creating impactful digital products from the ground up ‚Äî
          combining clean code with thoughtful design.
        </p>

        <!-- Meta grid -->
        <div class="grid grid-cols-2 gap-3 mb-8">
          {meta.map(m => (
            <div class="rounded-xl p-4" style="background:var(--bg-card); border:1px solid var(--border)">
              <div class="font-mono text-xs uppercase tracking-wider mb-1" style="color:var(--text-muted)">
                {m.label}
              </div>
              <div class="text-sm font-medium" style="color:var(--text)">{m.val}</div>
            </div>
          ))}
        </div>

        <!-- Download CV -->
        <a href={personal.cv} target="_blank"
           class="inline-flex items-center gap-2 font-mono text-xs transition-all"
           style="color:var(--accent); border-bottom:1px solid transparent"
           onmouseenter="this.style.borderBottomColor='var(--accent)'"
           onmouseleave="this.style.borderBottomColor='transparent'">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4"/>
            <polyline points="7 10 12 15 17 10"/>
            <line x1="12" y1="15" x2="12" y2="3"/>
          </svg>
          Download Resume / CV
        </a>
      </div>

    </div>
  </div>
</section>
