---
import { experience } from '../data/portfolio';
---

<section id="experience" class="py-24">
  <div class="max-w-5xl mx-auto px-5 sm:px-8">
    <div class="section-label">Journey</div>
    <h2 class="font-display font-bold mb-3 leading-tight"
        style="font-size:clamp(2rem,4vw,3rem); color:var(--text)">
      Experience &amp; Education
    </h2>
    <p class="mb-14" style="color:var(--text-muted); max-width:480px">
      My professional path and academic background.
    </p>

    <div class="timeline-wrap">

      {experience.map((item, i) => (
        <div
          class="reveal timeline-item"
          style={`transition-delay:${i * 0.12}s`}
        >
          <div class="timeline-dot"></div>
          <div class="timeline-content">
            <div class="font-mono text-xs mb-1.5 tracking-wider" style="color:var(--accent)">
              {item.date}
            </div>
            <h3 class="font-display font-bold text-lg mb-0.5" style="color:var(--text)">
              {item.title}
            </h3>
            <div class="text-sm mb-3" style="color:var(--text-muted)">{item.company}</div>
            <p class="text-sm leading-relaxed" style="color:var(--text-muted)">{item.desc}</p>
          </div>
        </div>
      ))}

    </div>

  </div>
</section>

<style>
  /* Wrapper â€” garis tunggal dari atas ke bawah */
  .timeline-wrap {
    position: relative;
    padding-left: 2rem;
  }

  .timeline-wrap::before {
    content: '';
    position: absolute;
    left: 5px;
    top: 6px;
    bottom: 6px;
    width: 2px;
    background: linear-gradient(
      to bottom,
      var(--accent) 0%,
      rgba(127,255,110,0.4) 70%,
      transparent 100%
    );
    border-radius: 2px;
  }

  /* Setiap item */
  .timeline-item {
    position: relative;
    padding-bottom: 2.5rem;
    padding-left: 1.5rem;
  }

  .timeline-item:last-child {
    padding-bottom: 0;
  }

  /* Dot */
  .timeline-dot {
    position: absolute;
    left: -1.625rem;
    top: 4px;
    width: 12px;
    height: 12px;
    background: var(--accent);
    border: 2px solid var(--bg);
    border-radius: 50%;
    box-shadow: 0 0 0 2px var(--accent), 0 0 12px var(--accent-glow);
    z-index: 1;
  }

  .timeline-content {
    padding-left: 0.25rem;
  }
</style>