---
import { experience } from '../data/portfolio';
---

<section id="experience" class="py-24">
  <div class="max-w-5xl mx-auto px-8">
    <div class="section-label">Journey</div>
    <h2 class="font-display font-bold mb-3 leading-tight"
        style="font-size:clamp(2rem,4vw,3rem); color:var(--text)">
      Experience &amp; Education
    </h2>
    <p class="mb-14" style="color:var(--text-muted); max-width:480px">
      My professional path and academic background.
    </p>

    <div class="relative pl-8 timeline-wrap">
      <!-- Vertical line -->
      <div class="absolute left-0 top-2 bottom-2 w-px"
           style="background:linear-gradient(to bottom, var(--accent), transparent)">
      </div>

      {experience.map((item, i) => (
        <div
          class="reveal relative pl-8 pb-10 last:pb-0"
          style={`transition-delay:${i * 0.12}s`}
        >
          <!-- Dot -->
          <div class="absolute left-[-0.375rem] top-1.5 w-3 h-3 rounded-full"
               style="background:var(--accent); box-shadow:0 0 10px var(--accent-glow)">
          </div>

          <div class="font-mono text-xs mb-1.5 tracking-wider" style="color:var(--accent)">
            {item.date}
          </div>
          <h3 class="font-display font-bold text-lg mb-0.5" style="color:var(--text)">
            {item.title}
          </h3>
          <div class="text-sm mb-3" style="color:var(--text-muted)">{item.company}</div>
          <p class="text-sm leading-relaxed" style="color:var(--text-muted)">{item.desc}</p>
        </div>
      ))}
    </div>
  </div>
</section>
