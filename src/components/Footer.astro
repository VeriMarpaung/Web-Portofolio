---
import { personal } from '../data/portfolio';
---

<footer style="border-top:1px solid var(--border)" class="py-8">
  <div class="max-w-5xl mx-auto px-8">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4">
      <span class="font-mono text-xs" style="color:var(--text-dim)">
        © {new Date().getFullYear()} {personal.name} — Built with Astro + Tailwind ☕
      </span>
      <div class="flex gap-6">
        <a href={personal.github} target="_blank" rel="noopener"
           class="font-mono text-xs transition-colors hover:text-accent"
           style="color:var(--text-dim)">GitHub</a>
        <a href={personal.linkedin} target="_blank" rel="noopener"
           class="font-mono text-xs transition-colors hover:text-accent"
           style="color:var(--text-dim)">LinkedIn</a>
        <a href={personal.cv} target="_blank"
           class="font-mono text-xs transition-colors hover:text-accent"
           style="color:var(--text-dim)">Resume</a>
      </div>
    </div>
  </div>
</footer>
